<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout">
	<Dialog>
		<customHeader>
			<Bar class="hdbar">
				<contentMiddle>
					<Text text="{i18n>Over/Under time Verification}" class="hfrag"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<HBox class="sapUiTinyMarginTop sapUiTinyMarginBegin">
				<TextArea value="{oHomeModel>/InputValue}" placeholder="{i18n>Type Reason Here...}" width="150%"/>
				<!--<Text text="Have you worked for more or less than 8hrs?" class="sapUiSmallMarginBegin sapUiSmallMarginTop txtco"/>-->
			</HBox>
			<HBox justifyContent="End" class="sapUiSmallMarginTop">
				<Button text="{i18n>Send}" type="Emphasized" width="5rem" press="onSend"/>
				<Button text="{i18n>Cancel}" type="Reject" class="sapUiSmallMarginBeginEnd chbtn" press="onNo" width="5rem"/>
			</HBox>
		</content>
	</Dialog>
</core:FragmentDefinition>