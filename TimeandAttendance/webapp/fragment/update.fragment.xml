<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:fb="sap.ui.comp.filterbar">
	
	<Dialog draggable="true" contentWidth="20rem" resizable="true"
		class="sapUiSizeCompact" verticalScrolling="true">
		<customHeader>
			<Bar class="hdbar">
				<contentMiddle>
					<Text text="{i18n>Update}" class="hfrag"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
		<f:SimpleForm editable="true" columnsL="4" layout="ResponsiveGridLayout" id="tab">
								<f:content>
									<Label text="{i18n>Date}" design="Bold"/>
									<Input value="{path: 'oHistoryModel>/selectedValue/date', formatter:'com.demo.TimeandAttendance.utility.formatter.changeDate'}" editable="false"/>
									<Label text="{i18n>CheckIn}" design="Bold"/>
									<Input value="{path: 'oHistoryModel>/selectedValue/checkIn', formatter:'com.demo.TimeandAttendance.utility.formatter.changeTime'}" change="onInputChange"/>
									<Label text="{i18n>CheckOut}" design="Bold"/>
									<Input value="{path: 'oHistoryModel>/selectedValue/checkOut', formatter:'com.demo.TimeandAttendance.utility.formatter.changeTime'}" change="onOutputChange"/>
									<Label text="{i18n>EmpId}" design="Bold"/>
									<Input value="{oHistoryModel>/selectedValue/empId}" editable="false"/>
									<Label text="{i18n>Status}" design="Bold"/>
									<Input value="{oHistoryModel>/selectedValue/status}" editable="false"/>
								</f:content>
							</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="save" press="onSave" type="Accept"/>
		</beginButton>
		<endButton>
			<Button text="cancel" type="Reject" press="onCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>