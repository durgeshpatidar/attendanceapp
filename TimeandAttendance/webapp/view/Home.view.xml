<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:r="sap.suite.ui.microchart"
	controllerName="com.demo.TimeandAttendance.controller.Home" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page showHeader="true" enableScrolling="false" class="sapUiResponsivePadding--header">
				<customHeader>
					<Bar class="header2">
						<contentLeft>
							<Image src="image/inc.png" class="sapUiTinyMarginTop"/>
						</contentLeft>
						<contentMiddle>
							<Text text="{i18n>Time And Attendance}" class="sansserif"/>
						</contentMiddle>
						<contentRight>
							<HBox class="sapUiSmallMarginTop">
								<Button icon="sap-icon://home" id="home" tooltip="{i18n>HOME}"
									class="sapUiLargeMarginBegin sapUiSmallMarginEnd styleHeader iconstyle myButtonStyle" press="onHome"/>
								<Button icon="sap-icon://approvals" id="approve" tooltip="{i18n>REQUESTS}" class="sapUiSmallMarginBeginEnd iconstyle" press="onApproval"/>
								<Button icon="sap-icon://customer-history" id="history" tooltip="{i18n>HISTORY}" class="sapUiSmallMarginBeginEnd iconstyle"
									press="onHistory"/>
								<Button icon="sap-icon://business-card" id="card" tooltip="{i18n>PROFILE}" class="sapUiSmallMarginBegin sapUiTinyMarginEnd iconstyle"
									press="onCard"/>
								<Button icon="sap-icon://log" id="logout" tooltip="{i18n>LOGOUT}" class="sapUiSmallMarginBegin sapUiTinyMarginEnd iconstyle"
									press="onLog"/>
							</HBox>
						</contentRight>
					</Bar>
				</customHeader>
				<subHeader>
					<Toolbar>
						<Text text="{i18n>Last Checkout} : {path: 'oCheckModel>/checkOut', formatter:'com.demo.TimeandAttendance.utility.formatter.changeTime'}" visible="{= ${oCheckModel>/checkOut} !== null ? true : false}"/>
						<Text text="{i18n>Last Checkin} : {path: 'oCheckModel>/checkIn', formatter:'com.demo.TimeandAttendance.utility.formatter.changeTime'}" visible="{= ${oCheckModel>/checkOut} !== null ? false : true}"/>
						<ToolbarSpacer/>
						<ToolbarSpacer/>
						<Text id="oLabel"/>
					</Toolbar>
				</subHeader>
				<content>
					<HBox class="sapUiTinyMarginTop">
						<VBox width="25%" class="vtile" items="{oModel>/data}">
							<HBox renderType="Bare" class="htile sapUiTinyMarginTop" justifyContent="SpaceBetween">
								<VBox width="75%">
									<Text text="{i18n>Query :} {oModel>querytype}" class="sapUiTinyMarginBegin sapUiTinyMarginTop tiletxt"/>
									<Text text="{i18n>Status :} {oModel>status}" class="sapUiTinyMarginBegin sapUiTinyMarginTop"/>
									<Text text="{path: 'oModel>requestDate', formatter:'com.demo.TimeandAttendance.utility.formatter.changeDate'}"
										class="sapUiTinyMarginBegin sapUiTinyMarginTop"/>
								</VBox>
								<r:RadialMicroChart size="S" percentage="{= ${oModel>status} !== 'Pending' ? 100 : 50}"
									valueColor="{path: 'oModel>status', formatter:'com.demo.TimeandAttendance.utility.formatter.changeColor'}" class="sapUiSmallMarginTop sapUiMediumMarginBegin"></r:RadialMicroChart>
							</HBox>
						</VBox>
						<HBox>
							<VBox height="30em">
								<Avatar src="image/photo.jpg" displaySize="Custom" customDisplaySize="150px" showBorder="true" class="avatr"/>
								<VBox>
									<Button text="{i18n>Check In}" class="cibtn" press="onCheckIn" id="checkin" enabled="{oHomeModel>/sEnable}"/>
									<Label class="timelabel" text="{oHomeModel>/sTime}" design="Bold"/>
								</VBox>
							</VBox>
							<VBox height="30em" width="40%">
								<HBox id="id_GMapContainer" fitContainer="true" justifyContent="Center" alignItems="Center" class="mapView"/>
								<VBox>
									<Button text="Check Out" class="cobtn" press="onCheckOut" id="checkout" enabled="{oHomeModel>/sEnable1}"/>
									<Label class="label1" text="{oHomeModel>/sTime1}" design="Bold"/>
								</VBox>
							</VBox>
						</HBox>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>